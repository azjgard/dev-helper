{
    "manifest_version": 2,

    "name"        : "Dev Helper Prototype",
    "description" : "Automatically grab and display text from old slide interactive webs.",
    "version"     : "1.0",

    "browser_action" : {
	"default_icon" : "icon48.png",
	"default_title": "Dev Helper Prototype"
    },

    "content_scripts":[
	{
	    "matches": [
		"*://avondale-iol/*"
	    ],
	    "js" : ["content/content2.js"], 
	    "run_at" : "document_idle"
	},
	{
	    "matches": [ "<all_urls>" ],
	    "js" : ["content/xmlPage.js"]
	}
    ],

    "background" : {
	"scripts" : [ "output/background.js" ]
    },

    "permissions" : [
	"tabs",
	"<all_urls>",
	"webRequest",
	"notifications",
	"storage",
	"system.display"
    ]
}
