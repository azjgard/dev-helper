{
    "manifest_version": 2,

    "name"        : "Web Requests",
    "description" : "Tracking resources",
    "version"     : "2.2",

    "browser_action" : {
	"default_icon" : "icon48.png",
	"default_title": "Web Requests"
    },

    "content_scripts":[
	{
	    "matches": [
		"*://avondale-iol/*"
	    ],
	    "js" : ["content.js"],
	    "run_at" : "document_idle"
	}
    ],

    "background" : {
	"scripts" : ["background.js"]
    },

    "permissions" : [
	"tabs",
	"<all_urls>",
	"webRequest",
	"notifications",
	"storage",
	"system.display"
    ]
}
